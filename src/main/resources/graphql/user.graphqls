type User {
    id: ID!
    workUserId: String
    name: String
    mail: String
}

input UserInput {
    id: ID
    workUserId: String
    name: String
    mail: String
}

extend type Query {
    getUserById(id: ID!): User
    getAllUser: [User]
    getCurrentUser: User
}

extend type Mutation {
    addUser(user: UserInput): User
    updateUser(user: UserInput): User
    deleteUserById(id: ID!): Response
}
